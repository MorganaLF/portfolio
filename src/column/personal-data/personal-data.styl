@import  "././variables.styl"

.personal-data
  padding: 0.75rem 0 4.625rem 1.25rem
  text-align: center
  &__picture
    display: inline-block
    width: 100%
    max-width: 240px
    margin: 0 0 1.25rem 1px
    padding: 0.9375rem
    border-radius: 50%
    border 1px solid accent-color
    box-sizing: border-box
    overflow: hidden
    font-size: 0
    &:after
      content ''
      padding-top: 100%
      float: left
  &__img
    border-radius: 50%
  &__name
    font-size 3.375rem
    font-weight: 300
    text-transform uppercase
    letter-spacing: 0.012em
  &__surname
    margin: 0 0 0.5rem 0
    font-size 4rem
    font-weight: 600
    line-height: 0.85
    text-transform uppercase
    //letter-spacing: -0.008em
  &__profession
    font-size 1.625rem
    font-weight 600
    text-transform uppercase
    letter-spacing: -0.026em

@media screen and (max-width: 800px)
  .personal-data
    padding-left: 0
    &__picture
      width: 100%
      max-width: 80%
      padding: 5%
