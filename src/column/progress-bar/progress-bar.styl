@import "/../../stylus/variables"

.progress-bar
  &__title
    margin: 0 0 5px 8px
    font-size 27px
    text-align: center
    &_align_left
      margin-bottom: 9px
      text-align: left
  &__indicator
    display: flex
    margin-bottom: 24px
    &_full
      height: 100%
      background: accent-color
    &_style_line
      height: 24px
      background: grey
    &--item
      width: 18px /*5.76%*/
      flex-shrink: 0
      margin: 0 5.2px /*0 1.5%*/
      border-radius: 50%
      background: grey
      overflow: hidden
      &:first-child
        margin-left: 0
      &:last-child
        margin-right: 0
      &:before
        content: ''
        float: left
        padding-top: 100%
      &_full
        background: accent-color

