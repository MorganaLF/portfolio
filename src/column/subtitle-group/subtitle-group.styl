@import  "././variables.styl"

.subtitle-group
  display: flex
  align-items center
  margin-left: 3px
  &__icon
    flex-basis: 76px
    flex-shrink: 0
    margin-right: 10px
    background: url("/images/PROFILE_ICON.png") no-repeat center center
    background-size: contain
    overflow: hidden
    &_user
      background-image: url("/images/PROFILE_ICON.png")
    &_phone
      background-image: url("/images/Phone_Icon.png")
    &_skills
      background-image: url("/images/SKILLS_ICON.png")
    &:before
      content: ''
      padding-top: 100%
      float: left
  &__title
    margin: 6px 9px 0 0
    font-size 42px
    font-weight: 600
    text-transform: uppercase
    color: accent-color
  &__line
    width: 100%
    border-bottom: 6px solid accent-color