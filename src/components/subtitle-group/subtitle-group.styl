@import  "././variables.styl"

.subtitle-group
  display: flex
  align-items center
  &__icon
    width: 4.7813rem
    flex-shrink: 0
    margin-right: 0.625rem
    background: url("images/PROFILE_ICON.png") no-repeat center center
    background-size: contain
    square()
    &_user
      background-image: url("images/PROFILE_ICON.png")
    &_phone
      width: 4.75rem
      background-image: url("images/Phone_Icon.png")
    &_skills
      width: 4.75rem
      background-image: url("images/SKILLS_ICON.png")
    &_star
      width: 4.7438rem
      background-image: url("images/EDUCATION_ICON.png")
    &_portfolio
      width: 4.9375rem
      background-image: url("images/EXPERIENCE_ICON.png")
    &_computer
      width: 4.75rem
      background-image: url("images/SOFTWARE_ICON.png")
  &__title
    margin: 0.375rem 0.5625rem 0 0
    font-size 2.625rem
    font-weight: 600
    text-transform: uppercase
    color: accent-color
  &__line
    width: 100%
    border-bottom: 6px solid accent-color