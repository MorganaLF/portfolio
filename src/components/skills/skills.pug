include ../subtitle-group/subtitle-group
include ../discrete-bar/discrete-bar

mixin skills({ titleOptions, barItems })
  section.skills
    +subtitle-group(titleOptions)
    ul.skills__list
      each barItem in barItems
        - let { title, value } = barItem;
          li.skills__list-item
            h3.skills__list-item-title= title
            +discrete-bar({ value })
