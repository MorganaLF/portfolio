include ../subtitle-group/subtitle-group
include ../progress-bar/progress-bar

mixin skills
  section.skills
    +title("skills", "skills")
    .skills__progress-bar
      +progressBar({
        type: "circles",
        progressLength: 12,
        barItems: [
          {
            title: "CREATIVE",
            progressFull: 9
          },
          {
            title: "TEAMWORK",
            progressFull: 11
          },
          {
            title: "INNOVATE",
            progressFull: 6
          },
          {
            title: "COMMUNICATION",
            progressFull: 11
          }
        ]
      })
