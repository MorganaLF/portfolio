mixin bulletedList(options)
  ul.bulleted-list
    each listItem in options.listItems
      li.bulleted-list__item
        span.bulleted-list__item--title(class=
        options.isColoredTitle ?
            'bulleted-list__item--title_color_accent':''
        )= listItem.h3
        span.bulleted-list__item--date= '// ' + listItem.span
        h4.bulleted-list__item--subtitle= listItem.h4
        p.main-text.bulleted-list__item--paragraph= listItem.p


