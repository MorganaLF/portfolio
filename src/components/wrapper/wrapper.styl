.wrapper
  display flex
  width: 100%
  max-width 1232px
  min-width: 320px
  margin 0 auto
  padding rem(78px) 0
  +sm()
    flex-direction column
    align-items center
  &__column
    flex-shrink 0
    padding-left one-side-column-indent
    padding-right one-side-column-indent
    box-sizing border-box
    &_size_4
      width 40.98%
    &_size_6
      width 59.02%
    &_size_4
    &_size_6
      +sm()
        width 100%
        max-width 600px
        padding-left rem(20px)
        padding-right rem(20px)
  &__personal-data-container
    padding rem(12px) 0 rem(78px) rem(20px)
    +sm()
      padding-left 0
  &__profile-container
    padding-bottom rem(46px)

