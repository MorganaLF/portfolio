@import "../../styles/variables.styl"

.personal-data
  text-align center
  break-word()

  &__picture
    display inline-block
    width 100%
    max-width 240px
    margin 0 0 26px 1px
    padding 15px
    border-radius 50%
    border 1px solid accent-color
    background accent-color
    background-clip content-box
    font-size 0
    square()

    +md()
      width 80%
      max-width 80%
      padding 5%

  &__img
    border-radius 50%

  &__name
  &__surname
  &__profession
    text-transform uppercase
    line-height 1

  &__name
    margin 0 0 1px 0
    font-size 54px
    font-weight 300
    letter-spacing 0.012em

  &__surname
    margin 0 0 6px 0
    font-size 64px
    font-weight 600

  &__profession
    font-size 26px
    font-weight 600
    letter-spacing -0.026em