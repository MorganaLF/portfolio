@import "../styles/variables"

.progress-bar
  &__title
    margin 0 0 rem(5px)
    font-size rem(27px)
    font-weight 400
    text-align center
    text-transform uppercase
    &_align_left
      margin-bottom rem(9px)
      text-align left
  &__indicator
    display flex
    margin-bottom rem(24px)
    &_full
      height 100%
      background accent-color
    &_style_line
      height rem(24px)
      background grey
    &--item
      width 5.55%
      flex-shrink 0
      margin 0 1.5%
      border-radius 50%
      background grey
      square()
      &:first-child
        margin-left 0
      &:last-child
        margin-right 0
      &_full
        background accent-color

