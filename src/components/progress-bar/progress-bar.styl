@import "../styles/variables"

.progress-bar
  &__title
    margin 0 0 0.3125rem 0
    font-size 1.6875rem
    font-weight 400
    text-align center
    text-transform uppercase
    &_align_left
      margin-bottom 0.5625rem
      text-align left
  &__indicator
    display flex
    margin-bottom 1.5rem
    &_full
      height 100%
      background accent-color
    &_style_line
      height 1.5rem
      background grey
    &--item
      width 5.55%
      flex-shrink 0
      margin 0 1.5%
      border-radius 50%
      background grey
      square()
      &:first-child
        margin-left 0
      &:last-child
        margin-right 0
      &_full
        background accent-color

