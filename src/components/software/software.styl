.software
  &__progress-bar
    &-container
      margin rem(28px) 0 0 rem(9px)
      display flex
      +xs()
        flex-direction column
        align-items center
    &-col
      width 50%
      +xs()
        width 100%
      &:first-child
        margin-right rem(36px)
        +xs()
          margin-right 0
      &:last-child
        margin-left rem(36px)
        +xs()
          margin-left 0