@import "../../styles/variables.styl"

.software
  &__progress-bar

    &-container
      margin 28px 0 0 9px
      display flex

      +xs()
        flex-direction column
        align-items center

    &-col
      width 50%

      +xs()
        width 100%

      &:first-child
        margin-right 36px

        +xs()
          margin-right 0

      &:last-child
        margin-left 36px

        +xs()
          margin-left 0