@import "../../styles/variables.styl"

.section-header
  display flex
  align-items center
  break-word()

  &__icon
    width 76px
    flex-shrink 0
    margin-right 10px
    background url("images/phone-icon.png") no-repeat center center
    background-size contain
    square()

    &_with-big-indent
      margin-right 22px

      +sm()
        margin-right 10px

    &_with-user
      background-image url("images/profile-icon.png")

    &_with-phone
      background-image url("images/phone-icon.png")

    &_with-bulb
      background-image url("images/skills-icon.png")

    &_with-star
      background-image url("images/education-icon.png")

    &_with-bag
      width 79px
      background-image url("images/experience-icon.png")

    &_with-computer
      background-image url("images/software-icon.png")

  &__title
    max-width 70%
    margin 6px 9px 0 0
    font-size 42px
    font-weight 600
    text-transform uppercase
    color accent-color

  &__line
    width 100%
    border-bottom 6px solid accent-color