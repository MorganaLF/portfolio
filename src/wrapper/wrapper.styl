.wrapper
  display flex
  max-width 1232px
  margin 0 auto
  padding: 78px 0
  //border: 1px solid black
  &__column
    flex-shrink 0
    padding-left: one-side-column-indent
    padding-right one-side-column-indent
    box-sizing: border-box
    //border: 1px solid black
    &_size_4
      width: calc(40.98%)
    &_size_6
      width: calc(59.02%)
  &__personal-data-container
    padding: 0.75rem 0 4.88rem 1.25rem
  &__profile-container
    padding-bottom: 2.875rem


@media screen and (max-width: 800px)
  .wrapper
    flex-direction: column
    align-items center
    &__column
      &_size_4,
      &_size_6
        width: 100%
        max-width: 600px
        padding-left: 20px
        padding-right: 20px
    &__personal-data-container
      padding-left: 0

