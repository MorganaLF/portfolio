font-face('MyriadPro', 'normal', 300, 'MyriadPro-LightSemiExt')
font-face('MyriadPro', 'normal', 400, 'MyriadPro-Regular')
font-face('MyriadPro', 'normal', 600, 'MyriadPro-Bold')

*
  margin 0
  padding 0
  -webkit-box-sizing border-box
  -moz-box-sizing border-box
  box-sizing border-box

img
  max-width 100%

html
  font-size root-font-size
  +md()
    font-size 14px
  +xxs()
    font-size 12px

body
  font-family 'MyriadPro', sans-serif
  font-weight 400

.main-text
  font-weight 400
  line-height 1.2
  &_weight_bold
    font-weight 600


